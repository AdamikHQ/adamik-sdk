{
  "name": "@adamik/sdk",
  "version": "1.0.0",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "scripts": {
    "build": "tsc",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:bitcoin": "jest --testNamePattern='Bitcoin'",
    "test:evm": "jest --testNamePattern='EVM|Ethereum'",
    "test:decoders": "jest --testNamePattern='Decoders'",
    "dev": "ts-node src/index.ts",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "typecheck": "tsc --noEmit",
    "lint": "eslint src tests --ext .ts",
    "lint:fix": "eslint src tests --ext .ts --fix",
    "prepublishOnly": "pnpm run build && pnpm run typecheck && pnpm test"
  },
  "keywords": [
    "adamik",
    "blockchain",
    "sdk",
    "typescript",
    "cryptocurrency",
    "transaction",
    "verification",
    "multi-chain"
  ],
  "author": "Adamik SAS",
  "license": "MIT",
  "description": "TypeScript SDK for verifying Adamik API responses and decoding blockchain transactions",
  "files": [
    "dist",
    "LICENSE",
    "README.md"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AdamikHQ/adamik-sdk.git"
  },
  "bugs": {
    "url": "https://github.com/AdamikHQ/adamik-sdk/issues"
  },
  "homepage": "https://github.com/AdamikHQ/adamik-sdk#readme",
  "engines": {
    "node": ">=18.0.0"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "devDependencies": {
    "@jest/reporters": "^30.0.4",
    "@types/glob": "^9.0.0",
    "@types/jest": "^30.0.0",
    "@types/node": "^18.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "eslint": "^8.57.0",
    "eslint-config-prettier": "^9.1.0",
    "glob": "^11.0.3",
    "jest": "^30.0.4",
    "jest-html-reporter": "^4.3.0",
    "jest-junit": "^16.0.0",
    "prettier": "^3.6.2",
    "ts-jest": "^29.4.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3"
  },
  "dependencies": {
    "@cosmjs/encoding": "^0.34.0",
    "@cosmjs/proto-signing": "^0.34.0",
    "@cosmjs/stargate": "^0.34.0",
    "@solana/spl-token": "^0.4.13",
    "@solana/web3.js": "^1.95.0",
    "bitcoinjs-lib": "^6.1.7",
    "cosmjs-types": "^0.9.0",
    "tronweb": "^6.0.3",
    "viem": "^2.32.0",
    "zod": "^3.23.8"
  }
}
